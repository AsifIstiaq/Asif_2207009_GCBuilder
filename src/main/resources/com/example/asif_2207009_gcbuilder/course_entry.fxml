<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.asif_2207009_gcbuilder.CourseEntryController">
    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Course Entry &amp; GPA Calculation" style="-fx-font-size:20px; -fx-font-weight:bold;" />
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Total Required Credits:" />
                <TextField fx:id="totalCreditsField" prefWidth="100" onKeyReleased="#onTotalCreditsChanged" />
                <Label fx:id="creditProgressLabel" text="Progress: 0.00 / 0.00 credits" style="-fx-text-fill:#0066cc; -fx-font-weight:bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Calculate GPA" fx:id="calculateButton" onAction="#onCalculate" style="-fx-font-size:12px;" />
            </HBox>
            <Separator />
        </VBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="140" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Course Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Course Code:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="codeField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Course Credit:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="creditField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Teacher 1:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="teacher1Field" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Teacher 2:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="teacher2Field" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Grade:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <ComboBox fx:id="gradeCombo" GridPane.rowIndex="5" GridPane.columnIndex="1" />

            <HBox spacing="8" GridPane.rowIndex="6" GridPane.columnIndex="1" alignment="CENTER_LEFT">
                <Button text="Add Course" fx:id="addButton" onAction="#onAdd" />
                <Button text="Edit Selected" fx:id="updateButton" onAction="#onUpdate" />
                <Button text="Delete Selected" onAction="#onRemove" />
                <Separator orientation="VERTICAL" />
                <Button text="Export Report" onAction="#onExport" />
                <Button text="Reset All" fx:id="resetButton" onAction="#onReset" />
            </HBox>

            <Label text="Entered Courses:" style="-fx-font-weight:bold;" GridPane.rowIndex="7" GridPane.columnIndex="0" />
            <TableView fx:id="courseTable" GridPane.rowIndex="7" GridPane.columnIndex="1" prefHeight="200">
                <columns>
                    <TableColumn fx:id="nameCol" text="Name" prefWidth="130" />
                    <TableColumn fx:id="codeCol" text="Code"/>
                    <TableColumn fx:id="creditCol" text="Credit" prefWidth="70" />
                    <TableColumn fx:id="teacher1Col" text="Teacher 1" prefWidth="100" />
                    <TableColumn fx:id="teacher2Col" text="Teacher 2" prefWidth="100" />
                    <TableColumn fx:id="gradeCol" text="Grade" prefWidth="60" />
                </columns>
            </TableView>
            <Label text="(Click a row to edit)" style="-fx-font-size:11px; -fx-text-fill:#666666;" GridPane.rowIndex="8" GridPane.columnIndex="1" />
        </GridPane>
    </center>

    <padding>
        <Insets top="8" right="12" bottom="8" left="12" />
    </padding>
</BorderPane>